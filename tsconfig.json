{
"compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
    "@/models/*": ["src/models/*"],
    "@/controllers/*": ["src/controllers/*"],
    "@/types/*": ["src/types/*"],
    "@/utils/*": ["src/utils/*"],
    "@/services/*": ["src/services/*"],
    "@/routes/*": ["src/routes/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["jest", "node"],
    "lib": ["ES2022", "DOM"]
},
"include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "tests/**/*.ts",
    "tests/**/*.d.ts"
],
"exclude": [
    "node_modules", 
    "dist"
]
}
